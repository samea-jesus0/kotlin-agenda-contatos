<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    card_view:cardCornerRadius="12dp"
    card_view:cardElevation="6dp">

    <LinearLayout
        android:background="@color/police_blue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:id="@+id/txtNome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Marcos"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/pearl"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="4dp"/>

        <TextView
            android:id="@+id/txtSobrenome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Duarte Gomes"
            android:textSize="18sp"
            android:textColor="@color/pearl"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="4dp"/>

        <TextView
            android:id="@+id/txtIdade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="25 anos"
            android:textSize="16sp"
            android:textColor="@color/pearl"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="4dp"/>

        <TextView
            android:id="@+id/txtCelular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(21) 11515-60515"
            android:textSize="16sp"
            android:textColor="@color/pearl"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="12dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end">

            <ImageView
                android:id="@+id/btAtualizar"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_atualizar"
                android:padding="6dp"
                android:layout_marginEnd="12dp"
                android:background="?attr/selectableItemBackgroundBorderless"/>

            <ImageView
                android:id="@+id/btDeletar"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_deletar"
                android:padding="6dp"
                android:background="?attr/selectableItemBackgroundBorderless"/>
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
